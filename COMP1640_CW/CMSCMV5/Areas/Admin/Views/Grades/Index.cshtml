@model IEnumerable<CMSCMV5.DAO.Grade>

@{
    ViewBag.Title = "List of Grades";
}

<h2>@Html.Raw(ViewBag.Title)</h2>

<a class="btn btn-danger" href="/Admin/Grades/Create">Create New</a>
<br />
<div class="table-responsive">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TotalScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GradeLetter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course.CMID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student.FirstName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalScore)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GradeLetter)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.CMID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.FirstName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.GradeID }) |
                    @Html.ActionLink("Details", "Details", new { id=item.GradeID }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.GradeID })
                </td>
            </tr>
}

    </table>
</div>