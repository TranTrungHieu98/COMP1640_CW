@model IEnumerable<CMSCMV5.DAO.Class>

@{
    ViewBag.Title = "List of Classes";
}

<h2>@Html.Raw(ViewBag.Title)</h2>
<a class="btn btn-danger" href="/Admin/Classes/Create">Create New</a>
<br />
    <div class="table-responsive">
        <table class="table">
            <tr >
                <th>
                    @Html.DisplayNameFor(model => model.Subject)
                    </th>
                <th>
                    @Html.DisplayNameFor(model => model.Department)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
            
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Subject)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>                   
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.IDClass }) |
                        @Html.ActionLink("Details", "Details", new { id = item.IDClass }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.IDClass })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
