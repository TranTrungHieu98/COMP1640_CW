@model IEnumerable<CMSCMV5.DAO.Class>

@{
    ViewBag.Title = "";
}
<h2>@Html.Raw(ViewBag.Title)</h2>


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h3><a href="/Admin/Classes/Create">Create Classes</a></h3>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Data Table's Classes</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Subject)</th>
                                    <th>@Html.DisplayNameFor(model => model.Department)</th>
                                    <th>@Html.DisplayNameFor(model => model.Title)</th>
                                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                                    <th>Edit</th>
                                    <th>Deatils</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Subject)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Department)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                        <td>@Html.ActionLink("Edit", "Edit", new { id = item.IDClass }, new { id = "PoPrintBlue" })</td>
                                        <td>@Html.ActionLink("Details", "Details", new { id = item.IDClass }, new { id = "PoPrintBlue" }) </td>
                                        <td>@Html.ActionLink("Delete", "Delete", new { id = item.IDClass }, new { onclick = "return confirm('Are sure wants to delete?');" })</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Subject)</th>
                                    <th>@Html.DisplayNameFor(model => model.Department)</th>
                                    <th>@Html.DisplayNameFor(model => model.Title)</th>
                                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                                    <th>Edit</th>
                                    <th>Deatils</th>
                                    <th>Delete</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div><!-- /.col -->
        </div><!-- /.row -->
    </section><!-- /.content -->
</div>
