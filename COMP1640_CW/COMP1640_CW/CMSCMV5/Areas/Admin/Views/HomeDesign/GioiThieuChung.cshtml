@model CMSCMV5.Areas.Admin.Models.GioiThieuChungModel
@{
    ViewBag.Title = "Gioi Thieu Chung";
}

<section class="content-header">
    <h1>
        Cầu hình giới thiệu chung
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Giao diện trang chủ</li>
    </ol>
</section>

<section class="content">
    <form action="@Url.Action("GioiThieuChung")" method="Post">
        <div class="row">
            @if (TempData["mess"] != null)
            {
                <div class="alert alert-success">
                    @TempData["mess"]
                </div>
            }
        </div>
        <div class="row">
            <div class="col-lg-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Vị trí
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>Tóm tắt</label>
                                    @Html.TextAreaFor(x => x.sumaryVitri, new { @class = "form-control", style = "min-height: 215px;" })
                                    <p class="error">@Html.ValidationMessageFor(x => x.sumaryVitri)</p>
                                </div>
                                <div class="form-group">
                                    <label>Nội dung đầy đủ</label>
                                    @Html.TextAreaFor(x => x.contentVitri, new { @class = "form-control ckeditor", style = "min-height: 215px;" })
                                    <p class="error">@Html.ValidationMessageFor(x => x.contentVitri)</p>
                                </div>
                            </div>
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <div class="col-lg-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Thông tin
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>Tóm tắt</label>
                                    @Html.TextAreaFor(x => x.sumaryThongtin, new { @class = "form-control", style = "min-height: 215px;" })
                                    <p class="error">@Html.ValidationMessageFor(x => x.sumaryThongtin)</p>
                                </div>
                                <div class="form-group">
                                    <label>Nội dung đầy đủ</label>
                                    @Html.TextAreaFor(x => x.contentThongtin, new { @class = "form-control ckeditor", style = "min-height: 215px;" })
                                    <p class="error">@Html.ValidationMessageFor(x => x.contentThongtin)</p>
                                </div>
                            </div>
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <div class="col-lg-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Cẩm nang
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>Tóm tắt</label>
                                    @Html.TextAreaFor(x => x.sumaryCamnang, new { @class = "form-control", style = "min-height: 215px;" })
                                    <p class="error">@Html.ValidationMessageFor(x => x.sumaryCamnang)</p>
                                </div>
                                <div class="form-group">
                                    <label>Nội dung đầy đủ</label>
                                    @Html.TextAreaFor(x => x.contentCamnang, new { @class = "form-control ckeditor", style = "min-height: 215px;" })
                                    <p class="error">@Html.ValidationMessageFor(x => x.contentCamnang)</p>
                                </div>
                            </div>
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
        </div>
        <div class="row col-lg-4">
            <button type="submit" onclick="return confirm('Bạn có chắc chắn muốn thay đổi dữ liệu này!');" class=" btn btn-success">Lưu dữ liệu</button>
        </div>
    </form>
</section>
