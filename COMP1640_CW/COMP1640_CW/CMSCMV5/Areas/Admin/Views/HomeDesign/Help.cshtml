@model CMSCMV5.Areas.Admin.Models.HelpDataModel

@{
    ViewBag.Title = "Giúp đỡ và Hỗ trợ";
}

<section class="content-header">
    <h1>
        Cầu hình thông tin giúp đỡ và hỗ trợ
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Giao diện trang chủ</li>
    </ol>
</section>

<section class="content">
    <form action="@Url.Action("Help")" method="post">
        <div class="row">
            @if (TempData["mess"] != null)
            {
                <div class="alert alert-success">
                    @TempData["mess"]
                </div>
            }
        </div>
        <div class="row">
            <div class="col-lg-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        @Html.TextBoxFor(x => x.data1.title, new { @class = "form-control", placeholder = "title" })                        
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>Nội dung tóm tắt</label>
                                    @Html.TextAreaFor(x => x.data1.sumary, new { @class = "form-control ckeditor", style = "min-height: 215px;" })
                                    <p class="error">@Html.ValidationMessageFor(x => x.data1.sumary)</p>
                                </div>
                                <div class="form-group">
                                    <label>Nội dung đầy đủ của trang</label>
                                    @Html.TextAreaFor(x => x.data1.content, new { @class = "form-control ckeditor", style = "min-height: 215px;" })
                                    <p class="error">@Html.ValidationMessageFor(x => x.data1.content)</p>
                                </div>
                            </div>
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <div class="col-lg-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        @Html.TextBoxFor(x => x.data2.title, new { @class = "form-control", placeholder = "title" })
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>Nội dung tóm tắt</label>
                                    @Html.TextAreaFor(x => x.data2.sumary, new { @class = "form-control ckeditor", style = "min-height: 215px;" })
                                    <p class="error">@Html.ValidationMessageFor(x => x.data2.sumary)</p>
                                </div>
                                <div class="form-group">
                                    <label>Nội dung đầy đủ của trang</label>
                                    @Html.TextAreaFor(x => x.data2.content, new { @class = "form-control ckeditor", style = "min-height: 215px;" })
                                    <p class="error">@Html.ValidationMessageFor(x => x.data2.content)</p>
                                </div>
                            </div>
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <div class="col-lg-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        @Html.TextBoxFor(x => x.data3.title, new { @class = "form-control", placeholder = "title" })
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>Nội dung tóm tắt</label>
                                    @Html.TextAreaFor(x => x.data3.sumary, new { @class = "form-control ckeditor", style = "min-height: 215px;" })
                                    <p class="error">@Html.ValidationMessageFor(x => x.data3.sumary)</p>
                                </div>
                                <div class="form-group">
                                    <label>Nội dung đầy đủ của trang</label>
                                    @Html.TextAreaFor(x => x.data3.content, new { @class = "form-control ckeditor", style = "min-height: 215px;" })
                                    <p class="error">@Html.ValidationMessageFor(x => x.data3.content)</p>
                                </div>
                            </div>
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
        </div>
        <div class="row col-lg-4">
            <button type="submit" onclick="return confirm('Bạn có chắc chắn muốn thay đổi dữ liệu này!');" class=" btn btn-success">Lưu dữ liệu</button>
        </div>
    </form>
</section>


