@model CMSCMV5.Areas.Admin.Models.SlideShowModel

<div class="col-lg-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            Thông tin chi tiết
        </div>
        <div class="panel-body">
            @if (Model != null)
            {
                <div class="row">
                    <div class="col-lg-12">
                        @using (Ajax.BeginForm("Slide", "HomeDesign", null, new AjaxOptions() { HttpMethod = "Post", UpdateTargetId = "FormData" }, null))
                        {
                            if (TempData["mess"] != null)
                            {
                                <div class="alert alert-success">
                                    @TempData["mess"]
                                </div>
                            }
                            <div class="form-group">
                                <label>Tiêu đề dòng 1</label>
                                @Html.TextBoxFor(x => x.txt1, new { @class = "form-control" })
                                <p class="error">@Html.ValidationMessageFor(x => x.txt1)</p>
                            </div>
                            <div class="form-group">
                                <label>Tiêu đề dòng 2</label>
                                @Html.TextBoxFor(x => x.txt2, new { @class = "form-control" })
                                <p class="error">@Html.ValidationMessageFor(x => x.txt2)</p>
                            </div>                            
                            <div class="form-group">
                                <label>Ảnh bìa (kích thước 600px x 500px)</label>
                                <div style="width:100%;height: 50px;">
                                    @Html.TextBoxFor(x => x.img, new { @class = "form-control", style = "width:70%;float:left;", onclick = "ChonAnh('#img')" })
                                    <img src="@Model.img" style="float:right;width:100px;height:50px" />
                                </div>
                                <input type="button" value="Chọn Ảnh" id="ckfinder-popup" onclick="ChonAnh('#img')" />
                                <p class="error">@Html.ValidationMessageFor(x => x.img)</p>
                            </div>
                            <div class="form-group">
                                <label>Link chuyển hướng(nếu có)</label>
                                @Html.TextBoxFor(x => x.link, new { @class = "form-control" })
                                <p class="error">@Html.ValidationMessageFor(x => x.link)</p>
                            </div>
                            <div class="form-group">
                                <label>Vị trí</label>
                                @Html.TextBoxFor(x => x.oder, new { @class = "form-control" })
                                <p class="error">@Html.ValidationMessageFor(x => x.oder)</p>
                            </div>
                            @Html.HiddenFor(x => x.id)
                            <button type="submit" onclick="return confirm('Bạn có chắc chắn muốn thay đổi dữ liệu này!');" class=" btn btn-success">Lưu dữ liệu</button>
                            if (Model.id != 0)
                            {
                                <a class="btn btn-danger" href="@Url.Action("DeleteSlide","HomeDesign", new { id = Model.id })" onclick="return confirm('Bạn có chắc chắn muốn xóa dữ liệu này!');" style="float:right;">Xóa dữ liệu</a>
                            }
                        }
                    </div>
                </div>
            }
            <!-- /.row (nested) -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
