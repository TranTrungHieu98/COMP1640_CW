@model CMSCMV5.Areas.Admin.Models.InfoModel

@{
    ViewBag.Title = "Chúng tôi";
}

<section class="content-header">
    <h1>
        Cầu hình thông tin chung tôi
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Giao diện trang chủ</li>
    </ol>
</section>

<section class="content">
    <form action="@Url.Action("Info")" method="post">
        <div class="row">
            @if (TempData["mess"] != null)
            {
                <div class="alert alert-success">
                    @TempData["mess"]
                </div>
            }
        </div>
        <div class="row">
            <div class="col-lg-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Chúng Tôi
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12"> 
                                <div class="form-group">
                                    <label>Trang giới thiệu chúng thôi</label>
                                    @Html.TextAreaFor(x => x.info, new { @class = "form-control ckeditor", style = "min-height: 215px;" })
                                    <p class="error">@Html.ValidationMessageFor(x => x.info)</p>
                                </div>
                            </div>
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <div class="col-lg-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Hướng đi & chiến lược
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">                            
                                <div class="form-group">
                                    <label>Trang hướng đi chiến lược</label>
                                    @Html.TextAreaFor(x => x.service, new { @class = "form-control ckeditor", style = "min-height: 215px;" })
                                    <p class="error">@Html.ValidationMessageFor(x => x.service)</p>
                                </div>
                            </div>
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <div class="col-lg-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Cơ hội & việc làm
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>Trang cơ hội việc làm</label>
                                    @Html.TextAreaFor(x => x.admissions, new { @class = "form-control ckeditor", style = "min-height: 215px;" })
                                    <p class="error">@Html.ValidationMessageFor(x => x.admissions)</p>
                                </div>
                            </div>
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
        </div>
        <div class="row col-lg-4">
            <button type="submit" onclick="return confirm('Bạn có chắc chắn muốn thay đổi dữ liệu này!');" class=" btn btn-success">Lưu dữ liệu</button>
        </div>
    </form>
</section>

