@model CMSCMV5.Areas.Admin.Models.LogoModel
@{
    ViewBag.Title = "Logo";
}

<section class="content-header">
    <h1>
        Cầu hình logo
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Giao diện trang chủ</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Cấu hình Logo website
                </div>
                <div class="panel-body">
                    @if (Model != null)
                    {
                        <div class="row">
                            <div class="col-lg-12">
                                @using (Html.BeginForm("Logo", "HomeDesign", FormMethod.Post))
                                {
                                    if (TempData["mess"] != null)
                                    {
                                        <div class="alert alert-success">
                                            @TempData["mess"]
                                        </div>
                                    }
                                    <div class="form-group">
                                        <label>Ảnh bìa (kích thước 600px x 500px)</label>
                                        <div style="width:100%;height: 50px;">
                                            @Html.TextBoxFor(x => x.img, new { @class = "form-control", style = "width:70%;float:left;", onclick = "ChonAnh('#img')" })
                                            <img src="@Model.img" style="float:right;width:100px;height:50px" />
                                        </div>
                                        <input type="button" value="Chọn Ảnh" id="ckfinder-popup" onclick="ChonAnh('#img')" />
                                        <p class="error">@Html.ValidationMessageFor(x => x.img)</p>
                                    </div>
                                    <button type="submit" onclick="return confirm('Bạn có chắc chắn muốn thay đổi dữ liệu này!');" class=" btn btn-success">Lưu dữ liệu</button>
                                }
                            </div>
                        </div>
                    }
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>
</section>