@model List<CMSCMV5.DAO.New>

<div class="col-lg-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            Danh sách Bài viết hiển thị trên trang chủ
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Ảnh</th>
                            <th>Tên</th>
                            <th>#</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            int i = 0;
                            foreach (var item in Model)
                            {
                                i++;
                                <tr>
                                    <td><a href="@Url.Action("RemoveHostNewIsHome", new { id = item.Id })"><i style="color: #0E82BD;" class="fa fa-arrow-left"></i></a></td>
                                    <td><img src="@item.img" style="width:100px;height:50px;" /></td>
                                    <td>@item.Title</td>
                                    <td>@item.Id</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
