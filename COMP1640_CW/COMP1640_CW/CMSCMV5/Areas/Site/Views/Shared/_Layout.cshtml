<body class="main" style="position:relative;">
    <div id="main">
        @{Html.RenderAction("Menu", "Home");}

        @{Html.RenderAction("Slide", "Home", new { img = ViewBag.img, photo = ViewBag.tourList });}

        @RenderBody()

        @{Html.RenderAction("Footer", "Home");}

        @{Html.RenderAction("Contact", "Home");}

        <style>
            ::selection {
                background: #bd4541 !important;
                color: #fff;
            }

            textarea.form-control {
                height: auto;
                width: 93%;
            }

            .btn.btn-primary {
                background: #45aed6;
                border-color: #2a95be;
            }

            textarea.form-control {
                height: auto;
            }

            .form-control {
                display: block;
                width: 95%;
                height: 34px;
                padding: 6px 12px;
                font-size: 14px;
                line-height: 1.42857143;
                color: #555;
                background-color: #fff;
                background-image: none;
                border: 1px solid #ccc;
                border-radius: 4px;
                -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
                box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
                -webkit-transition: border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;
                -o-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
                transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
            }

            .form-group {
                margin-bottom: 15px;
            }

            abbr[title], abbr[data-original-title] {
                cursor: help;
                border-bottom: 1px dotted #777;
            }

            strong {
                font-weight: 700;
            }

            address {
                margin-bottom: 20px;
                font-style: normal;
                line-height: 1.42857143;
            }

            #contact .contact-form {
                background: rgba(255, 255, 255, 0.8);
                padding: 20px;
                margin-top: 50px;
            }

            #contact .container-wrapper {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(69, 174, 214, 0.3);
                z-index: 1;
            }

            .gm-style {
                font-family: Roboto,Arial,sans-serif;
                font-size: 11px;
                font-weight: 400;
                text-decoration: none;
            }

            #contact {
                position: relative;
                overflow: hidden;
            }

            .tag-list {
                list-style: none;
            }

                .tag-list li {
                    float: left;
                }

            .entry-meta span {
                display: inline-block;
                position: relative;
                padding-right: 10px;
            }

            .post-content .btnblue {
                background-color: #3498db;
                border: 1px solid transparent;
                border-radius: 2px;
                color: #ffffff;
                font-size: .75em;
                font-weight: 800;
                padding: 10px 15px;
                text-transform: uppercase;
                /*width:116px;
                        height:36px;*/
            }

            .entry-text {
                font-size: .875em;
                line-height: 23px;
                padding-top: 10px;
            }

            .entry-title {
                color: #6f7678;
                font-size: 1.5em;
                font-weight: 700;
                text-transform: uppercase;
                padding: 0 0 0 0;
            }

            .post-content {
                padding-top: 15px;
            }

            .post-meta {
                border-bottom: 1px solid #d7dee0;
                color: #6f7678;
                font-size: .875em;
                padding: 15px 0px;
            }

            .latest-post article {
                border-bottom: 2px solid #3498db;
                padding-bottom: 25px;
                vertical-align: text-top;
            }

            .latest-post .item {
                padding-bottom: 25px;
            }

            .latest-posts {
                padding-bottom: 35px;
                padding-top: 40px;
                display: inline-block;
            }

            .post-area-title:after {
                right: 0px;
            }

            .post-area-title:before {
                left: 0px;
            }

            .post-area-title:before, .post-area-title:after {
                content: '';
                background-color: #d7dee0;
                top: 50%;
                height: 1px;
                position: absolute;
                width: 32%;
            }

            .latest-post .title-description {
                color: #3498db;
                font-size: 14px;
                line-height: 25px;
                margin: 0 0 10px;
            }

            .post-area-title {
                color: #6f7678;
                font-size: 30px;
                font-weight: 600;
                text-transform: uppercase;
                position: relative;
                padding-bottom: 5px !important;
                padding-top: 0px;
            }

            .post-area {
                padding-top: 60px;
                padding-bottom: 20px;
            }

            #slider4 {
                position: relative;
            }

                #slider4 .carousel.main {
                    width: 1190px;
                }

            .portfolio-top {
                position: relative;
            }

            .xoapadding {
                padding: 0px !important;
            }

            .portfolio-title {
                color: #6f7678;
                font-size: 2.125em;
                font-weight: 600;
                position: relative;
                text-transform: uppercase;
                padding-bottom: 0px;
                padding-top: 0px;
                font-size: 30px;
            }

            .portfolio-area .title-description {
                color: #3498db;
                font-size: .875em;
                padding-top: 10px;
                padding-bottom: 30px;
                font-size: 14px;
            }

            .portfolio-title:before, .portfolio-title:after {
                content: '';
                position: absolute;
                top: 50%;
                height: 1px;
                background-color: #d7dee0;
                width: 32%;
            }

            .portfolio-title:after {
                right: 0px;
            }

            .portfolio-title:before {
                left: 0px;
            }

            a {
                /*text-decoration: none;*/
                color: #6f7678;
                font-size: 12px;
            }

            .text-center {
                text-align: center;
            }

            .sub-head {
                display: block;
                text-align: center;
                font-size: 16px;
                color: #798289;
                text-transform: uppercase;
            }

            .animated {
                -webkit-animation-duration: 1s;
                animation-duration: 1s;
                -webkit-animation-fill-mode: both;
                animation-fill-mode: both;
            }

            .title {
                display: block;
                text-align: center;
            }

                .title h2 {
                    display: inline-block;
                    position: relative;
                    border-bottom: 1px solid #e1e1e1;
                    color: #0aabe1;
                    font-size: 30px;
                    font-weight: bold;
                    padding-left: 30px;
                    padding-right: 30px;
                }

                    .title h2:after {
                        background: none repeat scroll 0 0 #0aabe1;
                        bottom: -1px;
                        content: "";
                        height: 1px;
                        left: 50%;
                        margin-left: -25px;
                        position: absolute;
                        transition: all 0.3s ease 0s;
                        -moz-transition: all 0.3s ease 0s;
                        -webkit-transition: all 0.3s ease 0s;
                        width: 50px;
                    }

                    .title h2:hover:after {
                        left: 0;
                        margin-left: 0px;
                        width: 100%;
                        transition: all 0.3s ease 0s;
                        -webkit-transition: all 0.3s ease 0s;
                        -moz-transition: all 0.3s ease 0s;
                    }

            .support-block {
                position: relative;
                background: #f7f7f7;
                margin: 50px 0 0;
                padding: 50px 30px 30px;
                text-align: center;
            }

                .support-block:hover, .support-block.active {
                    background: #0aabe1;
                }

                .support-block .support-icon {
                    position: absolute;
                    top: -31px;
                    left: 50%;
                    margin-left: -31px;
                }

                .support-block .fa {
                    width: 63px;
                    height: 63px;
                    font-size: 30px;
                    line-height: 2;
                    color: #fff;
                    background: #0aabe1;
                    border-radius: 50%;
                    box-shadow: 0px 0px 0px 10px #cceef9;
                    -webkit-box-shadow: 0px 0px 0px 10px #cceef9;
                    -moz-box-shadow: 0px 0px 0px 10px #cceef9;
                }

            .fa {
                display: inline-block;
                font: normal normal normal 14px/1 FontAwesome;
                font-size: inherit;
                text-rendering: auto;
                -webkit-font-smoothing: antialiased;
                -moz-osx-font-smoothing: grayscale;
            }

            .support-block:hover .fa, .support-block.active .fa {
                background: #fff;
                color: #0aabe1;
                box-shadow: 0px 0px 0px 10px #0aabe1;
                -webkit-box-shadow: 0px 0px 0px 10px #0aabe1;
                -moz-box-shadow: 0px 0px 0px 10px #0aabe1;
            }

            .support-block:hover h3, .support-block:hover p, .support-block.active h3, .support-block.active p {
                color: #fff;
            }

            .support-block h3 {
                font-family: 'Raleway', sans-serif;
                font-weight: 700;
                text-transform: capitalize;
                margin-bottom: 15px;
                color: #0aabe1;
            }

            .p-aboutus {
                font-family: 'Raleway', sans-serif;
                font-size: 16px;
                color: #798289;
                line-height: 1.6;
            }
        </style>

    </div>
    @RenderSection("scripts", required: false)

    @{Html.RenderAction("ChatOnline", "Home");}

